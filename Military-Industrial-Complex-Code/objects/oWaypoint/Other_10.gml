/// @description Waypoint Type

switch(type) {
	case "Recon":
		sprite_index = sWaypointRecon;
		break;
		
	case "Patrol":
		sprite_index = sWaypointPatrol;
		break;
		
	case "Attack":
		sprite_index = sWaypointAttack;
		break;
		
	case "Defend":
		sprite_index = sWaypointDefend;
		break;
			
	case "Retreat":
		sprite_index = sWaypointRetreat;
		break;
}